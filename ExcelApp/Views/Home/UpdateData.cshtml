@model ExcelModel

<form asp-action="UpdateData">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Data</h1>
        <hr />

        <input hidden asp-for="Identity" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="FirstName" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Surname" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Age" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Sex" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Active" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Mobile" class="control-label" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

           
            <div class="col-5 offset-2">
                <a asp-action="UploadForm" asp-controller="Home" class=" btn btn-primary form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>


        </div>
    </div>

</form>
